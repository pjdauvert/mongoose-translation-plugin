{
  "organizeImports": { "enabled": true },

  "formatter": {
    "ignore": ["**/__tests__/*", "**/dist/**/*"],
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 160,
    "indentStyle": "space"
  },

  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "linter": {
    "ignore": ["**/dist/**/*"],
    "enabled": true,
    "rules": { "recommended": true }
  }
}
